package com.company;

import java.util.*;
import java.util.concurrent.atomic.AtomicInteger;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class Main {

    static boolean bracketsAreBalanced(String input) {
        ArrayDeque<Character> openingBracketsStack = new ArrayDeque<>();

        for (int i = 0; i < input.length(); i++) {

            if (input.charAt(i) == '[' || input.charAt(i) == '{' || input.charAt(i) == '(') {
                openingBracketsStack.push(input.charAt(i));
            } else {
                if (input.charAt(i) == ']') {
                    if (!openingBracketsStack.isEmpty()) {
                        if (openingBracketsStack.peek() != '[') {
                            return false;
                        } else {
                            openingBracketsStack.pop();

                        }
                    } else {
                        return false;
                    }
                } else if (input.charAt(i) == '}') {
                    if (!openingBracketsStack.isEmpty()) {
                        if (openingBracketsStack.peek() != '{') {
                            return false;
                        } else {
                            openingBracketsStack.pop();

                        }
                    } else {
                        return false;
                    }
                } else if (input.charAt(i) == ')') {
                    if (!openingBracketsStack.isEmpty()) {
                        if (openingBracketsStack.peek() != '(') {
                            return false;
                        } else {
                            openingBracketsStack.pop();

                        }
                    } else {
                        return false;
                    }

                }
            }

        }

        return true;
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        String input = scanner.nextLine();

        if (bracketsAreBalanced(input)) {
            System.out.println("YES");
        } else {
            System.out.println("NO");
        }
    }
}
