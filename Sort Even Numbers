package com.company;

import java.util.Arrays;
import java.util.List;
import java.util.Scanner;
import java.util.stream.Collectors;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        List<Integer> nums = Arrays.stream(scanner.nextLine().split(",\\s+")).map(Integer::parseInt).filter(e -> e % 2 == 0).collect(Collectors.toList());

        String initialOutput = nums.stream().map(String::valueOf).collect(Collectors.joining(", "));

        System.out.println(initialOutput);

        String sortedOutput = nums.stream().sorted(Integer::compareTo).map(String::valueOf).collect(Collectors.joining(", "));

        System.out.println(sortedOutput);
    }
}
